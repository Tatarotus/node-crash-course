<%- include('./partials/head.ejs') %>
<body>
  <%- include('./partials/header.ejs') %>
  <div class="blogs">
    <h2>All Blogs</h2>
    <% if(blogs.length > 0) { %>
      <% blogs.forEach((blog) => { %>
        <div class="content">
          <a href="/blogs/<%= blog._id %>" >
            <h1><%= blog.title %></h1>
            <p><%= blog.snippet %></p>
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <p>There are no blogs :/</p>
    <% } %>
  </div>
  <%- include('./partials/footer.ejs') %>
